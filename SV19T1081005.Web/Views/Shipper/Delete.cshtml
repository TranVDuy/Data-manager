@model SV19T1081005.DomainModel.Shipper
@{
    ViewBag.Title = "Xóa người giao hàng";
}

<div class="box box-">
    <div class="box-body">
        <form action="~/shipper/delete/@Model.ShipperID" method="post">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="control-label col-sm-2 ">Tên người giao hàng:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.ShipperName</p>
                    </div>
                </div>
                
                <div class="form-group">
                    <label class="control-label col-sm-2 ">Phone:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.Phone</p>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">

                        @if (SV19T1081005.BusinessLayer.CommonDataService.InUsedShipper(Model.ShipperID))
                        {
                            <p class="text-danger text-bold">*Không thể xóa người giao hàng này</p>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-danger">
                                <i class="fa fa-remove"></i> Đồng ý xóa
                            </button>

                        }


                        <a href="~/shipper" class="btn btn-success">
                            <i class="fa fa-backward"></i>Quay lại
                        </a>
                    </div>
                </div>
            </div>
        </form>

    </div>
    <!-- /.box-body -->
    <div class="box-footer">

    </div>
    <!-- /.box-footer-->
</div>

