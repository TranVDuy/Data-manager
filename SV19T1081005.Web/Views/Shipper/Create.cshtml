@model SV19T1081005.DomainModel.Shipper
@{
    //ViewBag.Title = "Người giao hàng";
}

<div class="box box-">
    <div class="box-body">
        <form class="form-horizontal" action="~/shipper/save" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2 ">Tên người giao hàng:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.ShipperName, new { @class = "form-control", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.ShipperName, "", new { @style = "color: red" })
                </div>
            </div>
            @Html.HiddenFor(m => m.ShipperID)

            @*<input type="hidden" value="@Model.ShipperID" name="ShipperID" />*@
            <div class="form-group">
                <label class="control-label col-sm-2 ">Phone:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control"})
                    
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>

                    <a href="~/shipper" class="btn btn-success">
                        <i class="fa fa-backward"></i>Quay lại
                    </a>
                </div>
            </div>

           
        </form>
    </div>
    <!-- /.box-body -->
    <div class="box-footer">

    </div>
    <!-- /.box-footer-->
</div>



