@model SV19T1081005.Web.Models.ProductSearchInput

@{
    ViewBag.Title = "Mặt hàng";
    List<SelectListItem> listPageSizes = new List<SelectListItem>();
    listPageSizes.Add(new SelectListItem() { Value = "5", Text = "5" });
    listPageSizes.Add(new SelectListItem() { Value = "10", Text = "10" });
    listPageSizes.Add(new SelectListItem() { Value = "15", Text = "15" });
    listPageSizes.Add(new SelectListItem() { Value = "20", Text = "20" });
}

<div class="box box-primary">
    <div class="box-header with-border ">
    </div>
    <div class="box-body">
        <form action="~/product/search" id="searchInput">
            <div class="row">
                <div class="col-sm-1">
                    @Html.DropDownListFor(m => m.PageSize, listPageSizes, new { @class = "form-control", @onchange = "getPageSize()" })

                </div>
                <div class="col-sm-2">
                    @Html.DropDownListFor(m => m.CategoryID, SelectListHelper.Categories(), new { @class = "form-control", @onchange = "getCategory()" })
                </div>
                <div class="col-sm-2">
                    @Html.DropDownListFor(m => m.SupplierID, SelectListHelper.Suppliers(), new { @class = "form-control", @onchange = "getSupplier()" })
                </div>
                <div class="col-sm-7 input-group">
                    <input type="text" name="searchValue"
                           class="form-control"
                           placeholder="Nhập tên mặt hàng cần tìm" value="@Model.SearchValue">
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-flat btn-info">
                            <i class="fa fa-search"></i>
                        </button>
                        <a href="~/product/create"
                           class="btn btn-flat btn-primary"
                           style="margin-left: 5px">
                            <i class="fa fa-plus"></i> Bổ sung
                        </a>
                    </span>
                </div>
            </div>
        </form>
        <p style="margin:10px 0 10px 0">

        <div id="searchResult">

        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            doSearch(@Model.Page);
            $("#searchInput").submit(function (e) {
                e.preventDefault();
                doSearch(1);
            });
        });
        function getPageSize() {
            doSearch(@Model.Page);
            $("#searchInput").submit(function (e) {
                e.preventDefault();
                doSearch(1);
            });
        };
        function getCategory() {
            doSearch(@Model.Page);
            $("#searchInput").submit(function (e) {
                e.preventDefault();
                doSearch(1);
            });
        };
        function getSupplier() {
            doSearch(@Model.Page);
            $("#searchInput").submit(function (e) {
                e.preventDefault();
                doSearch(1);
            });
        };
    </script>
}
