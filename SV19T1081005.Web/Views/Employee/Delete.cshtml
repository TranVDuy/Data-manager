@model SV19T1081005.DomainModel.Employee
@{
    ViewBag.Title = "Xóa nhân viên";
}

<div class="box box-">
    <div class="box-body">
        <form action="~/employee/delete/@Model.EmployeeID" method="post">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="control-label col-sm-2 ">Họ đệm:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.FirstName</p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2 ">Tên:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.LastName</p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2 ">Ngày sinh:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.BirthDate.Day/@Model.BirthDate.Month/@Model.BirthDate.Year</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2 ">Ảnh:</label>
                    <div class="col-sm-10">
                        <img src="@Model.Photo" style="width:80px" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2 ">Ghi chú:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.Notes</p>
                    </div>
                </div>


                <div class="form-group">
                    <label class="control-label col-sm-2 ">Email:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.Email</p>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">

                        @if (SV19T1081005.BusinessLayer.CommonDataService.InUsedEmployee(Model.EmployeeID))
                        {
                            <p class="text-danger text-bold">(*)Không thể xóa nhân viên này</p>
                        }
                        else
                        {
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-remove"></i> Đồng ý xóa
                        </button>

                        }


                        <a href="~/employee" class="btn btn-success">
                            <i class="fa fa-backward"></i>Quay lại
                        </a>
                    </div>
                </div>
            </div>
        </form>

    </div>
    <!-- /.box-body -->
    <div class="box-footer">

    </div>
    <!-- /.box-footer-->
</div>

