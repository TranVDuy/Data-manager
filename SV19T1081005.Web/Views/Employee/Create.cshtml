@model SV19T1081005.DomainModel.Employee
@{
    //ViewBag.Title = "Create";
}

<div class="box box-primary">
    <div class="box-header">
    </div>

    <div class="box-body">
        <form class="form-horizontal" action="~/employee/save" method="post" enctype="multipart/form-data">

            @Html.HiddenFor(m => m.EmployeeID)

            <div class="form-group">
                <label class="control-label col-sm-2">Họ:</label>
                <div class="col-sm-10">

                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.FirstName, "", new { @style = "color: red" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Tên:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.LastName, "", new { @style = "color: red" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh:</label>
                <div class="col-sm-10">
                    @*@Html.TextBoxFor(m => m.BirthDate, new { @class = "form-control" })*@
                    <input type="text" name="BirthDateString" class="form-control datepicker" value="@string.Format("{0:dd/MM/yyyy}", Model.BirthDate)" />

                    @Html.ValidationMessageFor(m => m.BirthDate, "", new { @style = "color: red" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @style = "color: red" })

                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ghi chú:</label>
                <div class="col-sm-10">
                    @Html.TextAreaFor(m => m.Notes, new { @class = "form-control", @autofocus = "autofocus" })

                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh cá nhân:</label>
                <div class="col-sm-10">
                    <input type="file" value="@Model.Photo" class="form-control" name="uploadPhoto" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                    @Html.ValidationMessageFor(m => m.Photo, "", new { @style = "color: red" })

                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    @if (Model.Photo.IsEmpty())
                    {
                        <img id="Photo" src="~/images/employees/add-image.png" class="img" style="width:200px; height: 200px" />

                    }
                    else
                    {
                        <img id="Photo" src="@Model.Photo" class="img" style="width:200px; height: 200px" />
                    }
                </div>
            </div>
            @Html.HiddenFor(m => m.Photo, new { Value = Model.Photo})
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a class="btn btn-warning" href="~/employee">
                        <i class="fa fa-ban"></i> Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="box-footer text-center">
    </div>

</div>

