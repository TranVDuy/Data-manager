@model SV19T1081005.DomainModel.Supplier
@{

}
<div class="box box-">
    <div class="box-body">
        <form class="form-horizontal has-feedback" action="~/supplier/save" method="post">
            @Html.HiddenFor(m => m.SupplierID)
            
            <div class="form-group">
                <label class="control-label col-sm-2 ">Tên nhà cung cấp:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.SupplierName, new { @class = "form-control", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.SupplierName, "", new { @style = "color:red" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2 ">Tên giao dịch:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.ContactName, new { @class = "form-control", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.ContactName, "", new { @style = "color:red" })

                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2 ">Địa chỉ:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.Address, "", new { @style = "color:red" })

                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2 ">Quốc gia:</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(m => m.Country, SelectListHelper.Countries(), new { @class = "form-control"})
                    @Html.ValidationMessageFor(m => m.Country, "", new { @style = "color:red" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2 ">Mã bưu chính:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control", @autofocus = "autofocus" })
                    
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-sm-2 ">Thành phố:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.City, new { @class = "form-control", @autofocus = "autofocus" })
                   
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-sm-2 ">Phone:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" value="@Model.Phone" name="Phone" id="Phone" placeholder="">
                </div>
            </div>



            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>

                    <a href="~/supplier" class="btn btn-success">
                        <i class="fa fa-backward"></i>Quay lại
                    </a>
                </div>
            </div>

           
        </form>
    </div>
    <!-- /.box-body -->
    <div class="box-footer">

    </div>
    <!-- /.box-footer-->
</div>

