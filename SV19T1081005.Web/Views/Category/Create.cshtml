@model SV19T1081005.DomainModel.Category
@{
//ViewBag.Title = "Create";
}

<div class="box box-">
    <div class="box-body">
        <form class="form-horizontal" action="~/category/save">
            <div class="form-group">
                <label class="control-label col-sm-2 ">Tên loại hàng:</label>
                <div class="col-sm-10">
                    <input type="text" value="@Model.CategoryName" autofocus class="form-control" name="CategoryName" id="CategoryName" placeholder="">
                    @Html.ValidationMessageFor(m => m.CategoryName, "", new { @style = "color:red" })
                </div>
            </div>
            <input type="hidden" name="CategoryID" value="@Model.CategoryID" />
            <div class="form-group">
                <label class="control-label col-sm-2 ">Mô tả:</label>
                <div class="col-sm-10">
                    <input type="text" value="@Model.Description" class="form-control" name="Description" id="Description" placeholder="">
                </div>
            </div>



            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>

                    <a href="~/category" class="btn btn-success">
                        <i class="fa fa-backward"></i>Quay lại
                    </a>
                </div>
            </div>

            
        </form>
    </div>
    <!-- /.box-body -->
    <div class="box-footer">

    </div>
    <!-- /.box-footer-->
</div>

