@model SV19T1081005.DomainModel.Category
@{
    ViewBag.Title = "Xóa loại hàng";
}

<div class="box box-">
    <div class="box-body">
        <form action="~/category/delete/@Model.CategoryID" method="post">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="control-label col-sm-2 ">Tên loại hàng:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.CategoryName</p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2 ">Mô tả:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.Description</p>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">

                        @if (SV19T1081005.BusinessLayer.CommonDataService.InUsedCategory(Model.CategoryID))
                        {
                            <p class="text-danger text-bold">(*)Không thể xóa loại hàng này!</p>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-danger">
                                <i class="fa fa-remove"></i> Đồng ý xóa
                            </button>
                        }

                        <a href="~/category" class="btn btn-success">
                            <i class="fa fa-backward"></i>Quay lại
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <!-- /.box-body -->
    <div class="box-footer">

    </div>
    <!-- /.box-footer-->
</div>


