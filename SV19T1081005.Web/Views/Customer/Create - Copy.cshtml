@model SV19T1081005.DomainModel.Customer
@*@{
        ViewBag.Title;
}*@

<div class="box box-">
    <div class="box-body">
        <form class="form-horizontal" action="~/customer/save" method="post">

            <input type="hidden" name="CustomerID" value="@Model.CustomerID" />

            <div class="form-group">
                <label class="control-label col-sm-2 ">Tên khách hàng:</label>
                <div class="col-sm-10">
                    <input type="text" value="@Model.CustomerName" autofocus class="form-control" name="CustomerName" id="CustomerName" placeholder="">
                    <p class="text-danger">@Html.ValidationMessage("CustomerName")</p> 
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2 ">Tên giao dịch:</label>
                <div class="col-sm-10">
                    <input type="text" value="@Model.ContactName" class="form-control" name="ContactName" id="ContactName" placeholder="">
                    <p class="text-danger">@Html.ValidationMessage("ContacName")</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2 ">Địa chỉ:</label>
                <div class="col-sm-10">
                    <input type="text" value="@Model.Address" class="form-control" name="Address" id="Address" placeholder="">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2 ">Quốc gia:</label>
                <div class="col-sm-10">
                    <select class="form-control" name="Country" id="Country" placeholder="Việt Nam">

                        @foreach (var con in SV19T1081005.BusinessLayer.CommonDataService.ListOfCountries())
                        {
                            if (con.CountryName == Model.Country)
                            {
                                <option selected value="@con.CountryName">@con.CountryName</option>
                            }
                            else
                            {
                                <option value="@con.CountryName">@con.CountryName</option>

                            }

                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2 ">Thành phố:</label>
                <div class="col-sm-10">
                    <input type="text" value="@Model.City" class="form-control" name="City" id="City" placeholder="">
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-sm-2 ">Mã bưu chính:</label>
                <div class="col-sm-10">
                    <input type="text" value="@Model.PostalCode" class="form-control" name="PostalCode" id="PostalCode" placeholder="">
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>

                    <a href="~/customer" class="btn btn-success">
                        <i class="fa fa-backward"></i>Quay lại
                    </a>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10 text-danger">
                    @Html.ValidationSummary();
                </div>
            </div>

        </form>
    </div>
    <!-- /.box-body -->
    <div class="box-footer">

    </div>
    <!-- /.box-footer-->
</div>

