@model SV19T1081005.DomainModel.Customer
@*@{
        ViewBag.Title;
}*@

<div class="box box-">
    <div class="box-body">
        <form class="form-horizontal" action="~/customer/save" method="post">

            @Html.HiddenFor(m => m.CustomerID)

            @*<input type="hidden" name="CustomerID" value="@Model.CustomerID" />*@

            <div class="form-group">
                <label class="control-label col-sm-2 ">Tên khách hàng:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control", @autofocus = "autofocus" } )
                    
                    @*<input type="text" 
                           value="@Model.CustomerName" 
                           autofocus class="form-control" 
                           name="CustomerName" 
                           id="CustomerName" placeholder="">*@

                    @Html.ValidationMessageFor(m => m.CustomerName, "", new { @style = "color:red" }) 
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2 ">Tên giao dịch:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.ContactName, new { @class = "form-control" })

                    @*<input type="text" value="@Model.ContactName" class="form-control" name="ContactName" id="ContactName" placeholder="">*@
                    @Html.ValidationMessageFor(m => m.ContactName, "", new { @style = "color: red" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2 ">Địa chỉ:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Address, "", new {@style = "color: red"})

                    @*<input type="text" value="@Model.Address" class="form-control" name="Address" id="Address" placeholder="">*@
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2 ">Quốc gia:</label>
                <div class="col-sm-10">
                   @Html.DropDownListFor(m => m.Country, SelectListHelper.Countries(), new { @class = "form-control"})
                    @Html.ValidationMessageFor(m => m.Country, "", new { @style = "color:red" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2 ">Thành phố:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.City, new { @class = "form-control" })

                    @*<input type="text" value="@Model.City" class="form-control" name="City" id="City" placeholder="">*@
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-sm-2 ">Mã bưu chính:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control" })

                    @*<input type="text" value="@Model.PostalCode" class="form-control" name="PostalCode" id="PostalCode" placeholder="">*@
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>

                    <a href="~/customer" class="btn btn-success">
                        <i class="fa fa-backward"></i>Quay lại
                    </a>
                </div>
            </div>

            

        </form>
    </div>
    <!-- /.box-body -->
    <div class="box-footer">

    </div>
    <!-- /.box-footer-->
</div>

